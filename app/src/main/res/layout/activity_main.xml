<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    tools:context=".views.activities.MainActivity">

    <TextView
        android:id="@+id/Vocabulary_Notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Vocabulary Notes"
        android:textAlignment="center"
        android:textColor="@color/mainWhite"
        android:textSize="19sp"
        app:fontFamily="@font/marion"
        app:layout_constraintStart_toEndOf="@id/logo"
        app:layout_constraintTop_toTopOf="@+id/logo"
        app:lineHeight="24sp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/userModifySearch2"
        app:layout_constraintEnd_toEndOf="@+id/mainSignInButton"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="@+id/mainSignInButton"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/userModifySearch2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="221dp"
        android:baseline="18sp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/person_holding_orange_pen_1925536" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="239dp"
        android:layout_height="27dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="234dp"
        android:text="Welcome to Vocabulary Note  "
        android:textSize="18sp"
        app:fontFamily="@font/avenirbook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="25sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="260dp"
        android:layout_height="19dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="259dp"
        android:text="Use image memory to improve your English!  "
        android:textSize="13sp"
        app:fontFamily="@font/avenirlight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="18sp" />

    <Button
        android:id="@+id/mainSignInButton"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginTop="509dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/bg_grey_round_button"
        android:onClick="onSignInButtonClick"
        android:paddingBottom="3dp"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="@color/mainWhite"
        android:textSize="16sp"
        app:fontFamily="@font/avenirbook"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="22sp" />

    <Button
        android:id="@+id/mainSignUpButton"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="509dp"
        android:background="@drawable/bg_green_round_button"
        android:onClick="onSignUpButtonClick"
        android:paddingBottom="3dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:fontFamily="@font/avenirbook"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="22sp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:maxLines="1"
        android:onClick="onGuestSignInClick"
        android:text="@string/logInAsGuest"
        android:textAlignment="center"
        android:textSize="14sp"
        app:fontFamily="@font/avenirroman"
        app:layout_constraintEnd_toStartOf="@+id/mainSignUpButton"
        app:layout_constraintStart_toEndOf="@+id/mainSignInButton"
        app:layout_constraintTop_toBottomOf="@id/mainSignInButton"
        app:lineHeight="16sp" />

</androidx.constraintlayout.widget.ConstraintLayout>